<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/generic_indent_small">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/st_interval_prompt"
            android:textAppearance="?android:textAppearanceMedium"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/rg_intervals"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/generic_indent_small"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/rb_interval_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/st_interval_1"
                android:textAppearance="?android:textAppearanceSmall" />

            <RadioButton
                android:id="@+id/rb_interval_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/st_interval_2"
                android:textAppearance="?android:textAppearanceSmall" />

            <RadioButton
                android:id="@+id/rb_interval_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/st_interval_3"
                android:textAppearance="?android:textAppearanceSmall" />

        </RadioGroup>

    </LinearLayout>

</ScrollView>